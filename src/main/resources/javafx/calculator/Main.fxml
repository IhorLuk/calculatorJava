<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="350.0" spacing="20.0" style="-fx-background-color: c2c2c2;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.calculator.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Label prefHeight="18.0" prefWidth="257.0" text="Output" fx:id="output" />
            <Button mnemonicParsing="false" prefHeight="26.0" text="Calculate" fx:id="calculate" onAction="#calculate"/>
        </buttons>
    </ButtonBar>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <children>
            <Button mnemonicParsing="false" prefHeight="98.0" prefWidth="109.0" text="1" fx:id="one" onAction="#enterNumber"/>
            <Button mnemonicParsing="false" prefHeight="98.0" prefWidth="109.0" text="2" fx:id="two" onAction="#enterNumber"/>
            <Button mnemonicParsing="false" prefHeight="98.0" prefWidth="109.0" text="3" fx:id="three" onAction="#enterNumber"/>
        </children>
    </HBox>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <children>
            <Button mnemonicParsing="false" prefHeight="98.0" prefWidth="109.0" text="4" fx:id="four" onAction="#enterNumber"/>
            <Button mnemonicParsing="false" prefHeight="98.0" prefWidth="109.0" text="5" fx:id="five" onAction="#enterNumber"/>
            <Button mnemonicParsing="false" prefHeight="98.0" prefWidth="109.0" text="6" fx:id="six" onAction="#enterNumber"/>
        </children>
    </HBox>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <children>
            <Button mnemonicParsing="false" prefHeight="98.0" prefWidth="109.0" text="7" fx:id="seven" onAction="#enterNumber"/>
            <Button mnemonicParsing="false" prefHeight="98.0" prefWidth="109.0" text="8" fx:id="eight" onAction="#enterNumber"/>
            <Button mnemonicParsing="false" prefHeight="98.0" prefWidth="109.0" text="9" fx:id="nine" onAction="#enterNumber"/>
        </children>
    </HBox>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <children>
            <Button mnemonicParsing="false" prefHeight="98.0" prefWidth="109.0" text="+" fx:id="plus" onAction="#mathOperation"/>
            <Button mnemonicParsing="false" prefHeight="98.0" prefWidth="109.0" text="-" fx:id="minus" onAction="#mathOperation"/>
            <Button mnemonicParsing="false" prefHeight="98.0" prefWidth="109.0" text="Delete" fx:id="delete" onAction="#delete"/>
        </children>
    </HBox>
</VBox>
